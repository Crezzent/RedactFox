{
  "manifest_version": 2,
  "name": "RedactFox",
  "version": "1.0",
  "description": "Redacts specified words on web pages.",
  "permissions": [
    "storage",
    "contextMenus",
    "activeTab"
  ],
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  "options_ui": {
    "page": "options.html",
    "browser_style": true
  },
  "background": {
    "scripts": ["background_script.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"],
      "css": ["censor-style.css"],
      "run_at": "document_start"
    }
  ]
}